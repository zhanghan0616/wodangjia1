<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.wodangjia.activity.SettingActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <RelativeLayout
            android:id="@+id/userinfo_rl_nickname"
            style="@style/user_info_menu_rl"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/iv_nickname"
                style="@style/user_info_menu_tv"
                android:text="@string/nickname" />

            <ImageView
                android:id="@+id/iv_nickname_enter"
                style="@style/menu_iv_enter" />

            <TextView
                android:id="@+id/nickname_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/iv_nickname_enter"
                android:text="用户999999" />

            <View style="@style/user_info_menu_line_long" />

            <View style="@style/user_info_menu_line" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>