<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarSize">50dip</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="white_light_14sp">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="white_light_16sp">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="white_light_18sp">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="gray_dark_16sp">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff6c6c6c</item>
    </style>

    <style name="gray_dark_14sp">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff6c6c6c</item>
    </style>

    <style name="gray_light_12sp">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ff999999</item>
    </style>

    <style name="gray_light_16sp">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff999999</item>
    </style>

    <style name="yellow_16sp">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffda44</item>
    </style>

    <style name="black_20sp">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="black_12sp">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="orange_12sp">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffff7802</item>
    </style>

    <style name="red_20sp">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#ffe41f11</item>
    </style>

    <style name="black_16sp">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="black_18sp">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="black_14sp">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="action_bar_whb">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#00cccc</item>
    </style>

    <style name="bottom_radiogroup">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bottom_radio_bg</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 我的  里面每一行中布局的样式 -->
    <style name="menu_rl">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/menu_option_bg</item>
        <item name="android:clickable">true</item>
    </style>
    <!-- 我的  里面的菜单图标样式 -->
    <style name="menu_iv_info">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- 我的  里面的文字样式 -->
    <style name="menu_tv_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#888888</item>
    </style>

    <!-- 我的  里面的后面的箭头图标样式 -->
    <style name="menu_iv_enter">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_enter</item>
    </style>

    <!-- 我的  里面的下面的分割线样式 -->
    <style name="menu_v_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">#eeeeee</item>
    </style>

    <!-- 店铺页面图标下面的文字 -->
    <style name="index_sale_font_below_img">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#888888</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- 顶部记录 单块相对布局样式 -->
    <style name="index_sale_relative_top">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/menu_option_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- 店铺主页顶部记录中的数字样式 -->
    <style name="index_sale_font_topnum">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- 聊天主页顶部radiobutton样式 -->
    <style name="index_chat_title_rb">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/chat_title_tv_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 个人资料列表relativelayout样式 -->
    <style name="user_info_menu_rl">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/menu_child_option_bg</item>
        <item name="android:clickable">true</item>
    </style>
    <!-- 个人资料列表relativelayout样式  中的短线 不到头 -->
    <style name="user_info_menu_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">#eeeeee</item>
    </style>
    <!-- 个人资料列表relativelayout样式  中的长线 到头 -->
    <style name="user_info_menu_line_long">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#eeeeee</item>
    </style>

    <!-- 个人资料  里面的文字样式 -->
    <style name="user_info_menu_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <!-- 卖家首页 订单状态 四块布局的 样式 -->    <style name="index_sale_rl_orders">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/menu_option_bg</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:clickable">true</item>
       
    </style>
    
    <!-- 头像选择框   弹出框-->
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

</resources>